{
    "name": "nest-js-ejs-mvc-boilerplate",
    "version": "0.0.1",
    "description": "NestJS MVC boilerplate description using EJS view-engine",
    "author": "tranphuquy19@gmail.com",
    "private": true,
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "generate:vapid": "./node_modules/.bin/web-push generate-vapid-keys",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "postinstall": "husky install",
        "commit": "cz"
    },
    "dependencies": {
        "@doracoder/fcm-nestjs": "^0.3.0",
        "@nestjs-modules/mailer": "^1.6.0",
        "@nestjs/common": "^7.6.13",
        "@nestjs/core": "^7.6.13",
        "@nestjs/jwt": "^8.0.0",
        "@nestjs/passport": "^7.1.5",
        "@nestjs/platform-express": "^7.6.13",
        "@nestjs/swagger": "^4.8.0",
        "@nestjs/typeorm": "^7.1.5",
        "accesscontrol": "^2.2.1",
        "bcrypt": "^5.0.1",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.13.1",
        "compression": "^1.7.4",
        "connect-flash": "^0.1.1",
        "connect-redis": "^6.0.0",
        "cookie-parser": "^1.4.5",
        "crypto": "^1.0.1",
        "csurf": "^1.11.0",
        "dotenv": "^10.0.0",
        "ejs": "^3.1.6",
        "express-session": "^1.17.2",
        "faker": "^5.5.3",
        "flat": "^5.0.2",
        "helmet": "^4.6.0",
        "i18n": "^0.13.3",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "moment": "^2.29.1",
        "morgan": "^1.10.0",
        "nest-access-control": "^2.0.2",
        "parse-duration": "^1.0.0",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "pg": "^8.6.0",
        "random-avatar-generator": "^2.0.0",
        "redis": "^3.1.2",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^6.6.6",
        "sitemap": "^7.0.0",
        "swagger-ui-express": "^4.1.6",
        "typeorm": "^0.2.34",
        "url": "^0.11.0",
        "uuid": "^8.3.2",
        "validator": "^13.6.0",
        "web-push": "^3.4.4"
    },
    "devDependencies": {
        "@commitlint/cli": "^12.1.4",
        "@commitlint/config-conventional": "^12.1.4",
        "@nestjs/cli": "^7.5.6",
        "@nestjs/schematics": "^7.2.7",
        "@nestjs/testing": "^7.6.13",
        "@types/bcrypt": "^5.0.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/compression": "^1.7.0",
        "@types/connect-flash": "^0.0.36",
        "@types/connect-redis": "^0.0.16",
        "@types/cookie-parser": "^1.4.2",
        "@types/csurf": "^1.11.2",
        "@types/express": "^4.17.12",
        "@types/express-session": "^1.17.3",
        "@types/faker": "^5.5.7",
        "@types/flat": "^5.0.1",
        "@types/i18n": "^0.13.0",
        "@types/jest": "^26.0.20",
        "@types/jsonwebtoken": "^8.5.1",
        "@types/lodash": "^4.14.170",
        "@types/morgan": "^1.9.2",
        "@types/multer": "^1.4.5",
        "@types/node": "^14.14.31",
        "@types/passport": "^1.0.6",
        "@types/passport-jwt": "^3.0.6",
        "@types/passport-local": "^1.0.33",
        "@types/redis": "^2.8.29",
        "@types/supertest": "^2.0.10",
        "@types/uuid": "^8.3.1",
        "@types/web-push": "^3.3.0",
        "@typescript-eslint/eslint-plugin": "^4.15.2",
        "@typescript-eslint/parser": "^4.15.2",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^7.20.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "^7.0.1",
        "jest": "^26.6.3",
        "lint-staged": "^11.0.1",
        "prettier": "^2.2.1",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.2",
        "ts-loader": "^8.0.17",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.1.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "lint-staged": {
        "*.ts": [
            "npm run lint",
            "npm run format",
            "git add ."
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
        }
    }
}
